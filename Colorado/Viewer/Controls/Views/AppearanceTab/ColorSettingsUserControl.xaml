<UserControl x:Class="Colorado.Viewer.Controls.Views.AppearanceTab.ColorSettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Colorado.Viewer.Controls.Views.AppearanceTab" 
             Margin="0,10,0,0" DataContext="{Binding RelativeSource={RelativeSource Self}}"
             xmlns:controls="clr-namespace:Colorado.Common.UI.Controls;assembly=Colorado.Common.UI">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <controls:ColourSlider Grid.Column="0" SelectedColour="{Binding SelectedColor, Mode=TwoWay}" />
        <Rectangle Grid.Column="1"  Margin="20,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Rectangle.Fill>
                <SolidColorBrush Color="{Binding SelectedColor}" />
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
