<UserControl x:Class="Colorado.Viewer.Controls.Views.AppearanceTab.AppearanceTabUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Colorado.Viewer.Controls.Views"
             xmlns:properties="clr-namespace:Colorado.Viewer.Properties"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Colorado.Common.UI;component/Views/Styles/CheckBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <CheckBox 
            Style="{StaticResource CheckBoxStyle}" 
            Content="{x:Static properties:Resources.EnableLightingCheckBoxText}"
            IsChecked="{Binding IsLightingEnabled}"/>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Lights}" Margin="0,20,0,0"/>
    </Grid>
</UserControl>